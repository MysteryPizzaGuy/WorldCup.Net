<UserControl x:Class="WorldCup.Net_WPF.PlayerOnField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCup.Net_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="150">
    <Grid x:Name="GridContainer">
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*">
				
			</ColumnDefinition>
			<ColumnDefinition Width="4*">
				
			</ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Image x:Name="PlayerImage"></Image>
		<Grid Grid.Column="1" Loaded="Grid_Loaded">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"></ColumnDefinition>
				<ColumnDefinition Width="4*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Label Content="{Binding ShirtNumber}"/>
			<Label Content="{Binding name}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />



		</Grid>



	</Grid>
</UserControl>
